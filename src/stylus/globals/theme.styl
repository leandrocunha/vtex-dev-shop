.product
  .avatar
    border-radius: 5px
    float: left
    margin: 0 10px 0 0
    width: 50px
    
  .info
    float: left
    
    span
      display: block
      
      &.name
        font-weight: bold
        margin: 0 0 3px 0
        
      &.username,
      &.email
        font-size: 12px
        line-height: 12px

.selectize-control
  margin: 0 10px 0 0
  width: 300px
  
.form-inline
  .form-control
    margin: 0 10px 0 0;
    font-size: 13px;
    line-height: 18px;
    padding: 8px;

.selectize-dropdown-content
  div
    .avatar
      display: inline-block
      height: 30px
      margin: 0 10px 0 0
      width: 30px
      
      img
        border-radius: 3px
        max-width: 100%
        
.empty
  p
    color: $alto
    font-size: 30px
    text-align: center
    padding: 20px 0
    

.coupon
  .form-inline
    .form-control
      margin: 0 10px 0 0
      width: 230px
      
.btn-lg
  margin: 0 0 50px 0
  width: 100%
